<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:fontFamily="@font/bold"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_id"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="Mời nhập thông tin" />

    <EditText
        android:fontFamily="@font/reg"
        android:layout_above="@+id/edit_name"
        android:hint="Mã số sinh viên, vd: 20184079"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:inputType="numberDecimal"
        android:digits="0123456789"
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:fontFamily="@font/reg"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="Họ tên"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="text"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:fontFamily="@font/bold"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:background="@drawable/curved_rect"
        android:id="@+id/scan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_name"
        android:layout_centerHorizontal="true"
        android:text="Scan"/>

    <TextView
        android:fontFamily="@font/bold"
        android:id="@+id/master_fragment_btn"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:text="Dành cho giảng viên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>