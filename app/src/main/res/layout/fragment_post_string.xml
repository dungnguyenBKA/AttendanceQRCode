<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    tools:context=".view.master.PostStringFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:fontFamily="@font/bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_string_edt"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:text="String to generate to QR code" />

    <EditText
        android:fontFamily="@font/reg"
        android:hint="Nhập chuỗi bất kì"
        android:id="@+id/post_string_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp" />

    <Button
        android:fontFamily="@font/bold"
        android:id="@+id/post_btn"
        android:textColor="#FFF"
        android:background="@drawable/curved_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_string_edt"
        android:layout_centerHorizontal="true"
        android:text="post" />
</RelativeLayout>